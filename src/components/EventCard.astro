---
const { title, date, imageUrl, address, description, url } = Astro.props;
---

<a href={url} class="event-card-link">
    <div class="event-card">
        <img src={imageUrl} alt={title} class="event-image" />
        <h3 class="event-title">{title}</h3>
        <div class="event-info">
            <p class="event-date">{date}</p> 
            <p class="event-location">üìç {address}</p>
            <p class="event-description">{description}</p>
        </div>
    </div>
</a>

<style>
    .event-card-link {
        text-decoration: none;
        color: inherit;
    }

    .event-card {
        position: relative;
        width: 250px;
        height: 400px;
        overflow: hidden;
        border-radius: 8px;
        margin: 0 10px;
        cursor: pointer;
        transition: transform 0.3s ease;
        background-size: cover;
        background-position: center;
    }

    .event-card:hover {
        transform: scale(1.05);
    }

    .event-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.3s ease;
    }

    .event-title {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        color: whitesmoke;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
        z-index: 10;
        padding: 20px;
    }

    .event-info {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        color: whitesmoke;
        padding: 10px;
        box-sizing: border-box;
        text-align: left;
        z-index: 10;
        font-family: "Montserrat", sans-serif;
    }

    .event-location {
        font-size: 1rem;
        margin-bottom: 8px;
    }

    .event-date {
        font-size: 1rem; 
        margin-bottom: 8px;
        font-weight: bold;
    }

    .event-description {
        font-size: 0.9rem;
        margin-bottom: 0;
    }

    .event-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.8),
            rgba(0, 0, 0, 0)
        );
        z-index: 5;
    }

    .event-card::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.8),
            rgba(0, 0, 0, 0)
        );
        z-index: 5;
    }

    .event-card:hover .event-image {
        transform: scale(1.1);
    }
</style>
