---
import EventCard from "../components/EventCard.astro";

const events = [
{
        title: "Teatro in un giorno: scoperta e conoscienza",
        date: "08-09-2025",
        img: "https://fenles.com/uploads/wv4_Y_Ae_Bvms2_DO_Jb3i_Vd_AM_Zj_Xo_JO_9_X2_Gp_B_Bp_R_c9a2736269.jpg", 
        address: "Teatro Comediarte",
        description: "Con questa masterclass di un solo giorno potrai vivere un primo incontro con il palco, tra esplorazione teatrale, esercizi e gioco espressivo",
        url: "https://fenles.com/evento/scpri-il-teatro-in-un-giorno-8-9-2025-grupo-comediarte"  
    },
        {
        title: "Masterclass di impro",
        date: "Dal 15-09-2025",
        img: "https://fenles.com/uploads/1_Mmt_Rq_O4vj_AM_Xt_5_RG_2r0y_Mccq_Wnr4t_Dg_592fafdf6c.jpeg", 
        address: "Teatro Cincomonos",
        description: "Corso masterclass di improvvisazione teatrale per adulti.",
        url: "https://fenles.com/evento/scopri-la-impro-15-9-2025-cincomonos-espai-dart"  
    },
            {
        title: "Corso di tecnica teatrale",
        date: "Dal 25-09-2025",
        img: "/corso_tecnica.png",
        address: "Teatro Calassanç",
        description: "Il corso di tecnica teatrale del martedì inizierà prima, dalle 19:00 alle 21:00, per avere più tempo e più energia da dedicare alla scena.",
        url: "https://www.instagram.com/p/DM8UAiUMFat/?img_index=1"  
    },     {
        title: "Improvvisazione teatrale: gioco, risate e creatività!",
        date: "Dal 29-09-2025",
        img: "/corso_improv.png",
        address: "Teatro Cincomonos",
        description: "Se hai voglia di metterti in gioco, scoprire la magia dell’imprevisto e costruire storie dal nulla… è il momento di unirti al gruppo!",
        url: "https://www.instagram.com/p/DMNbbyhsaXi/?img_index=1"  
    },
        {
        title: "Teatrino Piccino Picciò",
        date: "Dal 07-10-2025",
        img: "/corso_bambini.png",
        address: "Teatro Cincomonos",
        description: "Ogni martedì pomeriggio il Teatro Cincomonos si riempie di voci, risate e immaginazione.",
        url: "https://www.instagram.com/p/DMsOLG8BDSd/?img_index=1"  
    },
    
];

const defaultImageUrl = "/images/eventcard.png";
---

<h1 class="text-5xl text-[#b42242] font-generalSans my-12 ml-10">PROSSIMI EVENTI</h1>
<div class="px-4 sm:px-8 py-12 ">
    <div class="event-grid flex gap-4 overflow-x-auto overflow-y-hidden">
        {
            events.map(
                (
                    event: {
                        title: any;
                        date: any;
                        img: any;
                        address: any;
                        description: any;
                        url: any;  
                    },
                    index: any,
                ) => (
                    <div class="event-item flex-shrink-0 min-w-[250px] sm:min-w-0">
                        <EventCard
                            key={index}
                            title={event.title}
                            date={event.date}
                            imageUrl={event.img || defaultImageUrl}
                            address={event.address}
                            description={event.description}
                            url={event.url}  
                        />
                    </div>
                ),
            )
        }
    </div>
</div>


<div class="max-lg:mb-56"></div>

<style>
    .event-title-header {
        letter-spacing: 5px;
        margin: 20px 0;
    }

    .event-container {
        overflow-x: auto;
        scrollbar-width: thin;
        position: relative; 
    }

    .event-container::-webkit-scrollbar {
        height: 6px;
    }

    .event-container::-webkit-scrollbar-thumb {
        background: rgba(0, 0, 0, 0.1); 
        border-radius: 4px;
    }

    .event-card {
        transition: transform 0.3s ease-in-out, z-index 0s ease 0.3s;
        transform-origin: center;
        position: relative; 
    }

    .event-card:hover {
        transform: scale(1.05);
        z-index: 10; 
    }

    .event-grid {
        display: flex;
        gap: 16px;
        flex-wrap: nowrap;
        padding-bottom: 16px; 
    }

    .event-item {
        flex-shrink: 0;
        min-width: 250px;
        transition: margin 0.3s ease-in-out;
        margin-top: 0;
        margin-bottom: 0;
        position: relative; 
    }

    .event-item:hover {
        margin-left: 10px;
        margin-right: 10px;
        margin-top: -20px;
        margin-bottom: -10px;
        z-index: 10; 
    }


    @media (max-width: 768px) {
        .event-grid {
            gap: 10px; 
            padding-left: 16px; 
            padding-right: 16px;
        }

        .event-item {
            min-width: 200px;
        }

        .event-title-header {
            font-size: 2rem;
            text-align: center;
        }
    }

    @media (max-width: 480px) {
        .event-item {
            min-width: 180px;
        }

        .event-card {
            box-shadow: none; 
        }
    }
</style>
<div class="h-12 max-lg:-mt-80"></div>