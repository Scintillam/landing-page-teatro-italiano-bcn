const defaultImageUrl = "/images/eventcard.png";
---

<h1 class="text-5xl text-[#b42242] font-generalSans my-12 ml-10">PROSSIMI EVENTI</h1>
<div class="px-4 sm:px-8 py-12 ">
    <div class="event-grid flex gap-4 overflow-x-auto overflow-y-hidden">
        {
            events.map(
                (
                    event: {
                        title: any;
                        date: any;
                        img: any;
                        address: any;
                        description: any;
                        url: any;  
                    },
                    index: any,
                ) => (
                    <div class="event-item flex-shrink-0 min-w-[250px] sm:min-w-0">
                        <EventCard
                            key={index}
                            title={event.title}
                            date={event.date}
                            imageUrl={event.img || defaultImageUrl}
                            address={event.address}
                            description={event.description}
                            url={event.url}  
                        />
                    </div>
                ),
            )
        }
    </div>
</div>


<div class="max-lg:mb-56"></div>

<style>
    .event-title-header {
        letter-spacing: 5px;
        margin: 20px 0;
    }

    .event-container {
        overflow-x: auto;
        scrollbar-width: thin;
        position: relative; 
    }

    .event-container::-webkit-scrollbar {
        height: 6px;
    }

    .event-container::-webkit-scrollbar-thumb {
        background: rgba(0, 0, 0, 0.1); 
        border-radius: 4px;
    }

    .event-card {
        transition: transform 0.3s ease-in-out, z-index 0s ease 0.3s;
        transform-origin: center;
        position: relative; 
    }

    .event-card:hover {
        transform: scale(1.05);
        z-index: 10; 
    }

    .event-grid {
        display: flex;
        gap: 16px;
        flex-wrap: nowrap;
        padding-bottom: 16px; 
    }

    .event-item {
        flex-shrink: 0;
        min-width: 250px;
        transition: margin 0.3s ease-in-out;
        margin-top: 0;
        margin-bottom: 0;
        position: relative; 
    }

    .event-item:hover {
        margin-left: 10px;
        margin-right: 10px;
        margin-top: -20px;
        margin-bottom: -10px;
        z-index: 10; 
    }


    @media (max-width: 768px) {
        .event-grid {
            gap: 10px; 
            padding-left: 16px; 
            padding-right: 16px;
        }

        .event-item {
            min-width: 200px;
        }

        .event-title-header {
            font-size: 2rem;
            text-align: center;
        }
    }

    @media (max-width: 480px) {
        .event-item {
            min-width: 180px;
        }

        .event-card {
            box-shadow: none; 
        }
    }
</style>
<div class="h-12 max-lg:-mt-80"></div>